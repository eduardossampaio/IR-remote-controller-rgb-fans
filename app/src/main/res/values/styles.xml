<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black2</item>
        <item name="colorPrimaryDark">@color/black2</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="DefaultButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/circle_button</item>
        <item name="android:strokeColor">@color/white</item>
    </style>

    <style name="BlackButton" parent="DefaultButton">
        <item name="android:background">@drawable/circle_button_black</item>
    </style>

    <style name="WhiteButton" parent="DefaultButton">
        <item name="android:background">@drawable/circle_button_white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="YellowButton" parent="DefaultButton">
        <item name="android:background">@drawable/circle_button_yellow</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="RedButton" parent="DefaultButton">
        <item name="android:background">@drawable/circle_button_red</item>
    </style>

    <style name="GreenButton" parent="DefaultButton">
        <item name="android:background">@drawable/circle_button_green</item>
    </style>

    <style name="LightBlueButton" parent="DefaultButton">
        <item name="android:background">@drawable/circle_button_light_blue</item>
    </style>

    <style name="BlueButton" parent="DefaultButton">
        <item name="android:background">@drawable/circle_button_blue</item>
    </style>

    <style name="PurpleButton" parent="DefaultButton">
        <item name="android:background">@drawable/circle_button_purple</item>
    </style>


    <style name="default_layout">
        <item name="android:paddingTop">70dp</item>
        <item name="android:paddingBottom">70dp</item>
        <item name="android:background">@color/black2</item>
    </style>

</resources>
